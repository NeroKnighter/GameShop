@model GameShop.Domain.Models.ViewModels.RegisterViewModel

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/GameShop.styles.css" asp-append-version="true" />


<form asp-action="Register" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <center>
        <h1>Регистрация</h1>
        <table class="RegTable">
            <tr>
                <td><label asp-for="ProfileName">Имя: </label></td>
                <td><input type="text" asp-for="ProfileName" class="input-group-text" /></td>
                <td><span asp-validation-for="ProfileName"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Surname">Фамилия: </label></td>
                <td><input type="text" asp-for="Surname" class="input-group-text" /></td>
                <td><span asp-validation-for="Surname"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Patronymic">Отчество: </label></td>
                <td><input type="text" asp-for="Patronymic" class="input-group-text" /></td>
                <td><span asp-validation-for="Patronymic"></span></td>
            </tr>
            <tr>
                <td><label asp-for="PhoneNumber">Номер телефона: </label></td>
                <td><input type="text" asp-for="PhoneNumber" class="input-group-text" /></td>
                <td><span asp-validation-for="PhoneNumber"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Email">E-mail: </label></td>
                <td><input type="text" asp-for="Email" class="input-group-text" /></td>
                <td><span asp-validation-for="Email"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Name">Логин: </label></td>
                <td><input type="text" asp-for="Name" class="input-group-text" /></td>
                <td><span asp-validation-for="Name"></span></td>
            </tr>
            <tr>
                <td><label asp-for="Password">Пароль: </label></td>
                <td><input type="password" asp-for="Password" class="input-group-text" /></td>
                <td><span asp-validation-for="Password"></span></td>
            </tr>
            <tr>
                <td><label asp-for="PasswordConfirm">Подтвердите пароль: </label></td>
                <td><input type="password" asp-for="PasswordConfirm" class="input-group-text" /></td>
                <td><span asp-validation-for="PasswordConfirm"></span></td>
            </tr>
        </table>
        <input type="submit" value="Регистрация" class="btn btn-primary" />
    </center>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

