@model GameShop.Domain.Models.Game


<form asp-action="Edit" asp-controller="Game" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <table class="ProfileTable">
        <tr>
            <td colspan="2"><h1>Редактировать игру:</h1></td>
        </tr>
        <tr>
            <td><label asp-for="Name">Название:</label></td>
            <td><input type="text" asp-for="Name" class="input-group-text" value="@Model.Name" /></td>
            <td><span asp-validation-for="Name"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Price">Цена:</label></td>
            <td><input type="text" asp-for="Price" class="input-group-text" value="@Model.Price" /></td>
            <td><span asp-validation-for="Price"></span></td>
        </tr>
        <tr>
            <td><label asp-for="GenreId">Жанр:</label></td>
            <td>
                <select asp-for="GenreId">

                    @foreach (var item in ViewBag.Genres)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </td>
            <td><span asp-validation-for="GenreId"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Image">Изображение:</label></td>
            <td><input asp-for="Image" type="file"></input></td>
            <td><span asp-validation-for="Image"></span></td>
        </tr>
        <tr>
            <td>Описание: </td>
        </tr>
        <tr>
            <td style="height: 350px; width: 1200px" colspan="2">
                <input type="text" style="width: 100%; height: 100%" class="input-group-text" asp-for="Description" value="@Model.Description"></input>
            </td>
            <td><span asp-validation-for="Description"></span></td>
        </tr>
        <tr>
            <td><a asp-action="Index" asp-controller="Game" class="btn btn-primary">Назад</a></td>
            <td><input type="submit" value="Сохранить" class="btn btn-primary" style="margin-left: 1000px; background-color: green" /></td>
        </tr>
    </table>
    <br />
    <br />
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
