<body data-path-to-root="./" data-include-products="false" class="u-body u-xl-mode" data-lang="ru">
    <header class="u-clearfix u-header u-header" id="sec-81d5"><div class="u-clearfix u-sheet u-sheet-1"></div></header>
    <section class="u-clearfix u-section-1" id="sec-5b86">
        <div class="u-clearfix u-sheet u-sheet-1">
            <img class="u-image u-image-default u-image-1" src="@ViewBag.Image" alt="нету фотки" data-image-width="400" data-image-height="265">
            <h1 class="u-text u-text-1">@Model.Name</h1><br />
            <h2 class="u-text u-text-2">@string.Format("{0:C0}", Model.Price)</h2><br />
            <table class="table1">
                <tr>
                    <td>Название</td>
                    <td>@Model.Name</td>
                </tr>
               @*  <tr>
                    <td>Модель</td>
                    <td>@Model.Model</td>
                </tr> *@
                <tr>
                    <td>Жанр</td>
                    <td>@ViewBag.Genre</td>
                </tr>
                <tr>
                    <td>Цвет</td>
                    <td>@Model.Price</td>
                </tr>
            </table>
           
            <div class="Desc">
                @Model.Description
            </div>
            <br />
             <center>
                 <table class="table2">
                  <td>
                      <a asp-action="Index" asp-controller="Game" class="btn btn-primary">Назад</a>
                 </td>
                  <td><form asp-action="Edit" asp-controller="Game" asp-route-id="@Model.Id" method="get">
                           <input type="submit" class="btn btn-primary" value="Редактировать">
                 </form><br />
                 </td>
                 <td><form asp-action="Delete" asp-controller="Game" asp-route-id="@Model.Id">
                          <input type="submit" class="btn btn-primary" value="Удалить">
                 </form><br />
                 </td>
                 </table>
             </center>  
        </div>
    </section>
</body>
</html>


