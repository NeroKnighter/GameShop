@model GameShop.Domain.Models.ViewModels.ChangeThePasswordViewModel

<center>
    <h1>Смена пароля</h1>
    <form asp-action="ChangeThePassword" asp-controller="Account">
        <div asp-validation-summary="ModelOnly"></div>
        <table class="RegTable">
            <tr>
                <td><label asp-for="Name">Логин </label></td>
                <td><input type="text" asp-for="Name" readonly value="@User.Identity.Name" class="input-group-text" /></td>
                <td><span asp-validation-for="Name"></span></td>

            </tr>
            <tr>
                <td><label asp-for="NewPassword">Новый пароль </label></td>
                <td> <input type="password" asp-for="NewPassword" class="input-group-text" /></td>
                <td><span asp-validation-for="NewPassword"></span></td>
            </tr>
            <tr>
                <td><label asp-for="PasswordConfirm">Подтвердите пароль</label></td>
                <td><input type="password" asp-for="PasswordConfirm" class="input-group-text" /></td>
                <td><span asp-validation-for="PasswordConfirm"></span></td>
            </tr>
        </table>
        <br />
        <input type="submit" class="btn btn-primary" value="Сохранить" />
    </form>
</center>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>