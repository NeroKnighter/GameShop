<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GameShop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GameShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                      @*   <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" style="right: 90px; position:absolute; top: 9px">
                                <form asp-controller="Account" asp-action="Profile">
                                    <input class="btn btn-primary" type="submit" value="Профиль">
                                </form>
                            </li>
                            <li class="nav-item" style="right: 10px; position:absolute; top: 9px">
                                <form asp-controller="Account" asp-action="LogOut">
                                    <input class="btn btn-danger" type="submit" value="Выйти">
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" style="right: 150px; position:absolute; top: 9px">
                                <form asp-action="LogIn">
                                    <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="LogIn">Войти</a>
                                </form>
                            </li>
                            <li class="nav-item" style="right: 20px; position:absolute; top: 9px">
                                <form asp-action="Register">
                                    <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register" style="background-color: green">Регистрация</a>
                                </form>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="Index">Каталог</a>
                        </li> 
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="Add">Добавить</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - GameShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

